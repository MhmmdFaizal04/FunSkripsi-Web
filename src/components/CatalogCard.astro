---
import { formatPrice, getCategoryLabel } from '../lib/utils';

export interface Props {
  id: number;
  title: string;
  description: string;
  category: string;
  price: number;
  thumbnail_url?: string;
}

const { id, title, description, category, price, thumbnail_url } = Astro.props;

const categoryColors: Record<string, string> = {
  skripsi: 'badge-primary',
  proposal: 'badge-success',
  artikel: 'badge-warning',
};

const categoryIcons: Record<string, string> = {
  skripsi: 'bi-mortarboard',
  proposal: 'bi-file-earmark-text',
  artikel: 'bi-journal-text',
};
---

<div class="catalog-card" data-id={id}>
  <div class="card-image">
    {thumbnail_url ? (
      <img src={thumbnail_url} alt={title} loading="lazy" />
    ) : (
      <div class={`card-placeholder ${categoryColors[category]}`}>
        <i class={`bi ${categoryIcons[category] || 'bi-file-earmark'}`}></i>
      </div>
    )}
    <span class={`card-badge ${categoryColors[category] || 'badge-primary'}`}>
      {getCategoryLabel(category)}
    </span>
  </div>
  
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <p class="card-desc">{description}</p>
    <div class="card-footer">
      <span class="card-price">{formatPrice(price)}</span>
      <button class="btn btn-primary btn-sm buy-btn" data-catalog-id={id}>
        Beli Sekarang
      </button>
    </div>
  </div>
</div>

<style>
  .catalog-card {
    background: var(--white);
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition);
  }
  
  .catalog-card:hover {
    border-color: var(--primary-300);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }
  
  .card-image {
    position: relative;
    height: 160px;
    background-color: var(--gray-50);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .card-placeholder {
    font-size: 4rem;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--primary-50);
    color: var(--primary-300);
    transition: all var(--transition);
  }

  .card-placeholder.badge-success {
    background-color: #ecfdf5;
    color: #34d399;
  }

  .card-placeholder.badge-warning {
    background-color: #fffbeb;
    color: #fbbf24;
  }
  
  .catalog-card:hover .card-placeholder {
    transform: scale(1.05);
  }
  
  .card-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
  }
  
  .card-content {
    padding: 1.25rem;
  }
  
  .card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 0.5rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .card-desc {
    font-size: 0.875rem;
    color: var(--gray-500);
    margin-bottom: 1rem;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1rem;
    border-top: 1px solid var(--gray-100);
  }
  
  .card-price {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--primary-600);
  }
</style>
