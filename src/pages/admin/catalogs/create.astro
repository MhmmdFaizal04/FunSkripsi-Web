---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { createCatalog } from '../../../lib/db';

let error = '';
let success = false;

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    
    // Create logic same as before...
    const catalogData = {
      title: formData.get('title')?.toString() || '',
      description: formData.get('description')?.toString() || '',
      category: formData.get('category')?.toString() || '',
      type: formData.get('type')?.toString() || '',
      price: parseFloat(formData.get('price')?.toString() || '0'),
      drive_link: formData.get('drive_link')?.toString() || '',
      thumbnail_url: formData.get('thumbnail_url')?.toString() || '',
    };
    
    if (!catalogData.title || !catalogData.category || !catalogData.type || !catalogData.price) {
      error = 'Semua field wajib harus diisi!';
    } else {
      await createCatalog(catalogData);
      return Astro.redirect('/admin/catalogs?success=created');
    }
  } catch (e) {
    console.error('Error creating catalog:', e);
    error = 'Terjadi kesalahan. Silakan coba lagi.';
  }
}
---

<AdminLayout title="Tambah Produk Baru" currentPage="/admin/catalogs">
  <div class="create-page">
    <div class="form-card">
      <div class="form-header">
        <a href="/admin/catalogs" class="back-link">
          <i class="bi bi-arrow-left"></i> Kembali
        </a>
        <h2>Tambah Produk Baru</h2>
        <p>Lengkapi informasi produk prompt di bawah ini.</p>
      </div>
      
      {error && (
        <div class="alert alert-error">{error}</div>
      )}
      
      <form method="POST" class="product-form">
        <div class="form-grid">
          <div class="form-group full-width">
            <label class="form-label" for="title">Nama Produk *</label>
            <input 
              type="text" 
              id="title" 
              name="title" 
              class="form-input"
              placeholder="Contoh: Prompt Skripsi Kuantitatif - Ekonomi & Bisnis"
              required
            />
          </div>
          
          <div class="form-group full-width">
            <label class="form-label" for="description">Deskripsi</label>
            <textarea 
              id="description" 
              name="description" 
              class="form-textarea"
              placeholder="Deskripsi lengkap tentang produk prompt ini..."
              rows="4"
            ></textarea>
          </div>
          
          <div class="form-group">
            <label class="form-label" for="category">Kategori *</label>
            <select id="category" name="category" class="form-select" required>
              <option value="">Pilih kategori</option>
              <option value="skripsi">Skripsi</option>
              <option value="proposal">Proposal</option>
              <option value="artikel">Artikel</option>
            </select>
          </div>
          
          <div class="form-group">
            <label class="form-label" for="type">Tipe Penelitian *</label>
            <select id="type" name="type" class="form-select" required>
              <option value="">Pilih tipe</option>
              <option value="kuantitatif">Kuantitatif</option>
              <option value="kualitatif">Kualitatif</option>
            </select>
          </div>
          
          <div class="form-group">
            <label class="form-label" for="price">Harga (Rp) *</label>
            <input 
              type="number" 
              id="price" 
              name="price" 
              class="form-input"
              placeholder="75000"
              min="0"
              required
            />
          </div>
          
          <div class="form-group">
            <label class="form-label" for="drive_link">Link Google Drive</label>
            <input 
              type="url" 
              id="drive_link" 
              name="drive_link" 
              class="form-input"
              placeholder="https://drive.google.com/..."
            />
            <small class="form-hint">Link file prompt di Google Drive</small>
          </div>
          
          <div class="form-group full-width">
            <label class="form-label" for="thumbnail_url">URL Thumbnail</label>
            <input 
              type="url" 
              id="thumbnail_url" 
              name="thumbnail_url" 
              class="form-input"
              placeholder="https://example.com/image.jpg"
            />
            <small class="form-hint">URL gambar thumbnail produk (opsional)</small>
          </div>
        </div>
        
        <div class="form-actions">
          <a href="/admin/catalogs" class="btn btn-secondary">Batal</a>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Simpan Produk
          </button>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<style>
  .create-page {
    max-width: 800px;
  }
  
  .form-card {
    background: var(--white);
    border-radius: var(--radius-xl);
    padding: 2rem;
    box-shadow: var(--shadow);
    border: 1px solid var(--gray-200);
  }
  
  .form-header {
    margin-bottom: 2rem;
  }
  
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    color: var(--gray-500);
    text-decoration: none;
    font-size: 0.9rem;
  }
  
  .back-link:hover {
    color: var(--primary-600);
  }
  
  .form-header h2 {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }
  
  .form-header p {
    color: var(--gray-500);
    margin: 0;
  }
  
  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }
  
  .form-group.full-width {
    grid-column: 1 / -1;
  }
  
  .form-hint {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.8rem;
    color: var(--gray-400);
  }
  
  .form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--gray-100);
  }
  
  @media (max-width: 640px) {
    .form-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
